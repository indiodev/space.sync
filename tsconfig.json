{
	"compilerOptions": {
		"baseUrl": "./",
		"paths": {
			"~/*": ["./src/*"]
		},
		"rootDirs": ["./src"],
		"target": "ES2022",
		"module": "commonjs",
		"rootDir": "./",
		"outDir": "./build",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src", "test"]
}
