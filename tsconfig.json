{
	"compilerOptions": {
		"baseUrl": "./",
		"paths": {
			"~/*": ["./src/*"]
		},
		"rootDirs": ["./src"],
		"target": "ES2022",
		"module": "CommonJS",
		"rootDir": "./",
		"outDir": "./build",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules"]
}
